	precipitation::unstable_limit = 50
}

textgen::part2::story::temperature_weekly_minmax
{
	day::starthour = 6
	day::endhour = 18
	night::starthour = 18
	night::endhour = 6
}

textgen::part2::story::temperature_weekly_averages
{
	day::starthour = 6
	day::endhour = 18
	night::starthour = 18
	night::endhour = 6
}

textgen::part3::story::precipitation_classification
{
	max_some_places = 30
	max_many_places = 70
	some_places = 30
	many_places = 70
	classes = 0...2,2...5,5...10,10...20
