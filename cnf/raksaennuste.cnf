qdtext
{
	// Testialue

	areas	= suomi

	areas	+= ahvenanmaa
	areas	+= etela-karjala
	areas	+= etela-pohjanmaa
	areas	+= etela-savo
	areas	+= hame
	areas	+= kainuu
	areas	+= keski-pohjanmaa
